{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true
  },
  "exclude": [
    "node_modules"
  ],
  "typedocOptions": {
    "entryPoints": "src/index.ts",
    "readme": "README.adoc",
    "plugin": [
      ".."
    ],
    "out": "docs"
  }
}